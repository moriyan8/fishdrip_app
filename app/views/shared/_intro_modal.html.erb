<script>
  (function() {
    function showIntroModalIfExists() {
      const el = document.getElementById('introModal');
      if (!el) return;

      // bootstrap がロードされているか確認
      const Modal = window.bootstrap && window.bootstrap.Modal;
      if (!Modal) {
        console.warn("Bootstrap JS が存在しません。cdn で bootstrap.bundle.min.js を読み込むか、application.js に import してください。");
        return;
      }

      const modal = new Modal(el);
      modal.show();
    }

    // Turbo を使っている場合
    document.addEventListener('turbo:load', showIntroModalIfExists);
    // 通常ロード
    document.addEventListener('DOMContentLoaded', showIntroModalIfExists);
  })();
</script>
