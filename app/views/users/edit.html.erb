<div class="container mt-5" style="max-width: 500px;">
  <h2 class="text-center mb-4 text-white">プロフィールの編集</h2>

  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <ul class="mb-0">
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @user, url: user_path(@user), method: :patch, local: true, html: { id: "profile-edit-form", class: "form-group" } do |form| %>
    <div class="mb-3 text-start">
      <%= form.label :name, "ユーザー名", class: "form-label text-white" %>
      <%= form.text_field :name, class: "form-control", placeholder: "ユーザー名を入力" %>
    </div>

    <div class="d-grid mt-3">
      <%= form.submit "更新する", class: "btn btn-outline-primary" %>
    </div>
  <% end %>

  <div class="mt-3 text-center">
    <%= link_to "戻る", user_path(@user), class: "btn btn-outline-light btn-sm" %>
  </div>
</div>
