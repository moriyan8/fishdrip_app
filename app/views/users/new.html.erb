<div class="container mt-5" style="max-width: 500px;">
  <h2 class="text-center mb-4 text-white">ユーザー登録</h2>

  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <ul class="mb-0">
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @user, url: users_path, local: true, html: { id: "user-registration-form", class: "form-group" } do |form| %>
    <div class="mb-3 text-start">
      <%= form.label :email, "メールアドレス", class: "form-label text-white" %>
      <%= form.email_field :email, class: "form-control", placeholder: "メールアドレスを入力" %>
    </div>

    <div class="mb-3 text-start">
      <%= form.label :name, "ユーザー名", class: "form-label text-white" %>
      <%= form.text_field :name, class: "form-control", placeholder: "ユーザー名を入力" %>
    </div>

    <div class="mb-3 text-start">
      <%= form.label :password, "パスワード", class: "form-label text-white" %>
      <%= form.password_field :password, class: "form-control", placeholder: "パスワードを入力" %>
    </div>

    <div class="mb-3 text-start">
      <%= form.label :password_confirmation, "パスワード確認", class: "form-label text-white" %>
      <%= form.password_field :password_confirmation, class: "form-control", placeholder: "パスワードを再入力" %>
    </div>

    <div class="d-grid mt-3">
      <%= form.submit "登録", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
